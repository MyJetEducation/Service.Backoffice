@using Microsoft.AspNetCore.Components
@using Service.Backoffice.Blazor.Models
@using Service.Backoffice.Blazor.Services
@using Service.Core.Client.Extensions

@inject IUserInfoDataService _userInfoDataService

@if (_infoData is {ErrorText: {}})
{
    <div class="alert alert-danger" role="alert">
        @_infoData.ErrorText
    </div>
}

<div class="container min-width">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">User email</span>
        </div>
        <input type="text" class="form-control" id="emailValue" aria-describedby="basic-addon3" @bind="EmailFilter" @onkeydown="@EmailEnter">
        <div class="input-group-append">
            <button class="btn btn-primary" style="white-space: nowrap;" type="button" @onclick="Filter" disabled="@IsRefreshing">
                <span class="spinner-border spinner-border-sm" style="display: @(IsRefreshing ? "inline-block" : "none");" role="status" aria-hidden="true"></span>
                Search
            </button>
        </div>
    </div>
</div>

@if (_infoData != null && _infoData.ErrorText.IsNullOrEmpty())
{
    <div class="container small-width">
        <div class="card">
            <div class="card-header">
                User
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th class="progress-th">Parameter</th>
                        <th>Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (ParamValue paramValue in _infoData.UserInfoItems)
                    {
                        <tr>
                            <td>@paramValue.Param</td>
                            <td>@paramValue.Value</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="container small-width">
        <div class="card">
            <div class="card-header">
                Account
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead class="thead-dark">
                    <tr>
                        <th class="progress-th">Parameter</th>
                        <th>Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (ParamValue paramValue in _infoData.ProfileItems)
                    {
                        <tr>
                            <td>@paramValue.Param</td>
                            <td>@paramValue.Value</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@code {
    private UserInfoDataViewModel _infoData;
    private string EmailFilter { get; set; }
    private bool IsRefreshing { get; set; } = false;

    private async Task Filter()
    {
        IsRefreshing = true;

        _infoData = await _userInfoDataService.GetUserData(EmailFilter);

        IsRefreshing = false;
    }

    public async Task EmailEnter(KeyboardEventArgs e)
    {
        if (e.Code is "Enter" or "NumpadEnter")
            await Filter();
    }

}